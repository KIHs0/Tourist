<body>
  <style>
    .containerSidebar {
      z-index: 10;
      position: static;
      top: 4rem;
      display: flex;
      overflow-y: hidden;
      overflow-x: auto;
      padding: 0.9rem 1rem;
      gap: 2rem;
      user-select: none;
      scrollbar-color: transparent gray;
      scroll-behavior: smooth;
    }

    .containerSidebar::-webkit-scrollbar-track {
      cursor: grab;
    }
    .category-pill {
      display: inline-block;
      color: #fff;
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 500;
      cursor: pointer;
      flex-shrink: 0;
      transition: 0.3s ease;
      border: 1px solid rgba(255, 255, 255, 0.099);
      cursor: cell;
      box-shadow: 0 0 2px rgba(255, 255, 255, 0);
    }

    .category-pill:hover {
      background: #444;
      border-color: cyan;
      box-shadow: 0 1px 4px rgba(6, 175, 181, 0.4);
    }

    @media (max-width: 769px) {
      .containerSidebar {
        touch-action: manipulation;
        gap: 0.4rem;
        scrollbar-width: none;
      }
      .category-pill {
        font-size: 0.75rem;
        padding: 0.4rem 0.8rem;
        touch-action: manipulation;
      }
    }
  </style>

  <div class="containerSidebar">
    <div class="category-pill" data-link="/video/categories/kanda">Kanda</div>
    <div class="category-pill" data-link="/video/categories/desi">Desi</div>
    <div class="category-pill" data-link="/video/categories/teen">Teen</div>
    <div class="category-pill" data-link="/video/categories/nepali">Nepali</div>
    <div class="category-pill" data-link="/video/categories/vagina">Vagina</div>
    <div class="category-pill" data-link="/video/categories/indian">Indian</div>
    <div class="category-pill" data-link="/video/categories/asian">Asian</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
    <div class="category-pill" data-link="/video/categories/bbw">BBW</div>
  </div>

  <script>
    // Optional: redirect on click
    document.querySelectorAll(".category-pill").forEach((pill) => {
      pill.addEventListener("click", () => {
        window.location.href = pill.dataset.link;
      });
    });
  </script>
</body>
