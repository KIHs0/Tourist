<%layout("../layout/plate.ejs")%>

<h2 class="prompt" style="margin-top:1rem;">Categorized By "<%= query %>"</h2>

<% if (results.length === 0) { %>
<a href="/" class="home-btn">🏠 Go to Homepage</a>

  <h2 class="resultiszero">No videos found.</h2>

<% } else { %>
    <div class="video-container">
  <% for (video of results) { %>
    <div class="video-card">
      <a href="/video/<%= video._id %>/show">
        <div class="thumbnail">
          <img
            src="<%= video.video.thumbnailUrl %>"
            alt="<%= video.video.filename %>"
            loading="lazy"
          />
        </div>
        <div class="video-details">
          <h3 class="video-title"><%= video.title %></h3>
          <p class="video-description"><%= video.description %></p>
        </div>
      </a>
    </div>
    <% } %>
    <%}%>
</div>
</div>


